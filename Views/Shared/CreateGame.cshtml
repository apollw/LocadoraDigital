@model LocadoraDigital.ViewModels.GameViewModel

<h2>Criar Novo Jogo</h2>

<form asp-action="CreateGame" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConsoleDevices">Consoles Disponíveis</label>
        <select asp-for="ConsoleDevices" asp-items="Model.ConsoleDevices" class="form-control" multiple>
            <!-- As opções de plataformas são carregadas dinamicamente -->
        </select>
        <span asp-validation-for="ConsoleDevices" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Criar</button>
    </div>
</form>
