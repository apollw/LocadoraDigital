@model LocadoraDigital.ViewModels.ConsoleDeviceViewModel

@if (ViewBag.Message != null)
{
    <script>
        alert('@ViewBag.Message');
    </script>
}

@{
    ViewData["Title"] = "Create Console Device";
}

<h2>Create Console Device</h2>

<form asp-action="CreateConsoleDevice" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerHour"></label>
        <input asp-for="PricePerHour" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="PricePerHour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlatformId">Platform</label>
        <select asp-for="PlatformId" class="form-control" asp-items="Model.Platforms">
            <!-- As opções de plataformas são carregadas dinamicamente -->
        </select>
        <span asp-validation-for="PlatformId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
